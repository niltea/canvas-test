//- vars
block vars
- const pageTitle = PugPageName ? `${options.siteName} | ${PugPageName}` : options.siteName

doctype html
html(lang='ja')
    head
        meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
        meta(charset='utf-8')
        block title
            title #{pageTitle}
        link(rel='stylesheet', href="/css/style.css?v1.00")
        block link
    body#page-top
        include _gnav
        div#wrapper.wrapper.loaderTarget
            block body
        script(src='/js/app.js?v1.0', async="async")
        block script
